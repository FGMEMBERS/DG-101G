  <hrule/>

  <group>
    <layout>hbox</layout>
    <text>
      <label>if you got a redout</label>
    </text>
    <empty><stretch>true</stretch></empty>
    <button>
      <legend>Clear</legend>
      <binding>
        <command>property-assign</command>
        <property>/sim/rendering/redout/enabled</property>
        <value type="bool">false</value>
      </binding>
    </button>
  </group>

  <hrule/>

  <group>
    <layout>hbox</layout>
    <text><label>X</label></text>
    <empty><stretch>true</stretch></empty>
    <button>
      <legend>Close</legend>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
    <empty><pref-height>6</pref-height></empty>
  </group>

  <!-- possible draggers listing -->
    <nasal>
      <open>
        dg101g.releaseDragger();
        dg101g.listCandidates();
      </open>
      <close>
        dg101g.hookDragger();
        dg101g.removeCandidates();
      </close>
    </nasal>

