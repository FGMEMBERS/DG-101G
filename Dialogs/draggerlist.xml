<?xml version="1.0"?>

<PropertyList>
  <name>dragger_list</name>
  <layout>vbox</layout>
  <default-padding>5</default-padding>
  <modal>false</modal>
  <width>500</width>

<!-- the title bar -->
  <group>
    <layout>hbox</layout>
    <empty><stretch>true</stretch></empty>
    <text>
      <label>DG101-G Dragger Selection</label>
    </text>
    <empty><stretch>true</stretch></empty>
  </group>

  <hrule/>

<!-- the list (table) with the candidates -->
  <group>
    <layout>vbox</layout>
    <group>
      <layout>hbox</layout>
      <text><label>5 closest candidates</label></text>
      <empty><stretch>true</stretch></empty>
    </group>
<!-- the real data as table -->
<!-- the first candidate -->
    <group>
      <layout>hbox</layout>
      <checkbox>
        <halign>left</halign>
        <live>true</live>
        <property>/sim/glider/towing/list/candidate[0]/selected</property>
        <binding>
          <command>nasal</command>
          <script>dg101g.selectCandidates(0)</script>
        </binding>
      </checkbox>
      <text>
        <label>M</label>
        <format>id: %03d  </format>
        <halign>left</halign>
        <live>true</live>
        <property>/sim/glider/towing/list/candidate[0]/id</property>
      </text>
      <empty><pref-width>30</pref-width></empty>
      <text>
        <label>M</label>
        <format>type: %s  </format>
        <halign>left</halign>
        <live>true</live>
        <property>/sim/glider/towing/list/candidate[0]/type</property>
      </text>
      <empty><pref-width>30</pref-width></empty>
      <text>
        <label>M</label>
        <format>callsign: %s  </format>
        <halign>left</halign>
        <live>true</live>
        <property>/sim/glider/towing/list/candidate[0]/callsign</property>
      </text>
      <empty><stretch>true</stretch></empty>
      <text>
        <label>MMM</label>
        <format>distance: %5.1fm  </format>
        <halign>right</halign>
        <live>true</live>
        <property>/sim/glider/towing/list/candidate[0]/distance_m</property>
      </text>
      <empty><pref-width>60</pref-width></empty>
    </group>
