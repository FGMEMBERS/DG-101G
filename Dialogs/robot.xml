<?xml version="1.0"?>

<PropertyList>
  <name>robot_dialog</name>
  <layout>vbox</layout>
  <default-padding>1</default-padding>
  <modal>false</modal>
  <width>500</width>

<!-- headline -->
    <group>
      <layout>hbox</layout>
      <default-padding>1</default-padding>
      <empty>
        <stretch>true</stretch>
      </empty>
      <text>
        <label>Drag Roboter Configuration</label>
      </text>
      <empty>
        <stretch>true</stretch>
      </empty>
      <button>
        <legend>X</legend>
        <key>Esc</key>
        <pref-width>16</pref-width>
        <pref-height>16</pref-height>
        <border>2</border>
        <binding>
          <command>dialog-close</command>
        </binding>
      </button>
    </group>


    <hrule/>

<!-- minimum take-off speed -->
    <group>
      <layout>hbox</layout>
      <text>
        <halign>left</halign>
        <label>min. take-off speed (20m/s == 72km/h)</label>
      </text>
      <group>
        <layout>hbox</layout>
        <halign>right</halign>
        <text>
          <label>999.9  </label>
          <live>true</live>
          <format>%0.1f m/s </format>
          <property>sim/glider/dragger/robot/presets/glob_min_speed_takeoff_mps</property>
        </text>
        <empty>
          <stretch>true</stretch>
        </empty>
        <vrule/>
        <text>
          <label>15m/s</label>
        </text>
        <slider>
          <name>min_takeoff_mps</name>
          <property>sim/glider/dragger/robot/presets/glob_min_speed_takeoff_mps</property>
          <min>15.0</min>
          <max>25.0</max>
          <binding>
            <command>dialog-apply</command>
          </binding>
        </slider>
        <text>
          <label>25m/s</label>
        </text>
      </group>
    </group>

<!-- maximum speed -->
    <group>
      <layout>hbox</layout>
      <text>
        <halign>left</halign>
        <label>max. speed (36m/s == 130km/h)</label>
      </text>
      <group>
        <layout>hbox</layout>
        <halign>right</halign>
        <text>
          <label>999.9  </label>
          <live>true</live>
          <format>%0.1f m/s </format>
          <property>sim/glider/dragger/robot/presets/glob_max_speed_mps</property>
        </text>
        <empty>
          <stretch>true</stretch>
        </empty>
        <vrule/>
        <text>
          <label>28m/s</label>
        </text>
        <slider>
          <name>max_speed_mps</name>
          <property>sim/glider/dragger/robot/presets/glob_max_speed_mps</property>
          <min>28.0</min>
          <max>55.0</max>
          <binding>
            <command>dialog-apply</command>
          </binding>
        </slider>
        <text>
          <label>55m/s</label>
        </text>
      </group>
    </group>

<!-- lift at max. speed -->
    <group>
      <layout>hbox</layout>
      <text>
        <halign>left</halign>
        <label>lift at max. speed (3m/s == Xf/s)</label>
      </text>
      <group>
        <layout>hbox</layout>
        <halign>right</halign>
        <text>
          <label>999.9  </label>
          <live>true</live>
          <format>%0.1f m/s </format>
          <property>sim/glider/dragger/robot/presets/glob_max_speed_lift_mps</property>
        </text>
        <empty>
          <stretch>true</stretch>
        </empty>
        <vrule/>
        <text>
          <label>2m/s</label>
        </text>
        <slider>
          <name>max_speed_lift_mps</name>
          <property>sim/glider/dragger/robot/presets/glob_max_speed_lift_mps</property>
          <min>2.0</min>
          <max>5.0</max>
          <binding>
            <command>dialog-apply</command>
          </binding>
        </slider>
        <text>
          <label>5m/s</label>
        </text>
      </group>
    </group>

    <hrule/>

<!-- max. tauten speed -->
    <group>
      <layout>hbox</layout>
      <text>
        <halign>left</halign>
        <label>max. speed for tautening(3m/s == Xf/s)</label>
      </text>
      <group>
        <layout>hbox</layout>
        <halign>right</halign>
        <text>
          <label>999.9  </label>
          <live>true</live>
          <format>%0.1f m/s </format>
          <property>sim/glider/dragger/robot/presets/glob_max_speed_tauten_mps</property>
        </text>
        <empty>
          <stretch>true</stretch>
        </empty>
        <vrule/>
        <text>
          <label>2m/s</label>
        </text>
        <slider>
          <name>max_speed_tauten_mps</name>
          <property>sim/glider/dragger/robot/presets/glob_max_speed_tauten_mps</property>
          <min>2.0</min>
          <max>5.0</max>
          <binding>
            <command>dialog-apply</command>
          </binding>
        </slider>
        <text>
          <label>5m/s</label>
        </text>
      </group>
    </group>

<!-- max. tauten acceleration -->
    <group>
      <layout>hbox</layout>
      <text>
        <halign>left</halign>
        <label>max. acceleration for tautening(0.5m/ss == Xf/s)</label>
      </text>
      <group>
        <layout>hbox</layout>
        <halign>right</halign>
        <text>
          <label>999.9  </label>
          <live>true</live>
          <format>%0.1f m/s </format>
          <property>sim/glider/dragger/robot/presets/glob_min_acceleration_mpss</property>
        </text>
        <empty>
          <stretch>true</stretch>
        </empty>
        <vrule/>
        <text>
          <label>0.2m/ss</label>
        </text>
        <slider>
          <name>min_acceleration_mpss</name>
          <property>sim/glider/dragger/robot/presets/glob_min_acceleration_mpss</property>
          <min>0.2</min>
          <max>1.0</max>
          <binding>
            <command>dialog-apply</command>
          </binding>
        </slider>
        <text>
          <label>1m/ss</label>
        </text>
      </group>
    </group>

<!-- max. acceleration -->
    <group>
      <layout>hbox</layout>
      <text>
        <halign>left</halign>
        <label>max. acceleration(3.0m/ss == Xf/s)</label>
      </text>
      <group>
        <layout>hbox</layout>
        <halign>right</halign>
        <text>
          <label>999.9  </label>
          <live>true</live>
          <format>%0.1f m/s </format>
          <property>sim/glider/dragger/robot/presets/glob_max_acceleration_mpss</property>
        </text>
        <empty>
          <stretch>true</stretch>
        </empty>
        <vrule/>
        <text>
          <label>1m/ss</label>
        </text>
        <slider>
          <name>max_acceleration_mpss</name>
          <property>sim/glider/dragger/robot/presets/glob_max_acceleration_mpss</property>
          <min>1.0</min>
          <max>5.0</max>
          <binding>
            <command>dialog-apply</command>
          </binding>
        </slider>
        <text>
          <label>5m/ss</label>
        </text>
      </group>
    </group>

    <hrule/>

<!-- tauten distance -->
    <group>
      <layout>hbox</layout>
      <text>
        <halign>left</halign>
        <label>tauten distance(50m == Xf)</label>
      </text>
      <group>
        <layout>hbox</layout>
        <halign>right</halign>
        <text>
          <label>999.9  </label>
          <live>true</live>
          <format>%0.1f m/s </format>
          <property>sim/glider/dragger/robot/presets/glob_max_tautendist_m</property>
        </text>
        <empty>
          <stretch>true</stretch>
        </empty>
        <vrule/>
        <text>
          <label>10m</label>
        </text>
        <slider>
          <name>max_tautendist_m</name>
          <property>sim/glider/dragger/robot/presets/glob_max_tautendist_m</property>
          <min>10.0</min>
          <max>100.0</max>
          <binding>
            <command>dialog-apply</command>
          </binding>
        </slider>
        <text>
          <label>100m</label>
        </text>
      </group>
    </group>

    <hrule/>
    <empty/>
    <hrule/>

<!-- max. lift height -->
    <group>
      <layout>hbox</layout>
      <text>
        <halign>left</halign>
        <label>max. lift height(800m == Xf)</label>
      </text>
      <group>
        <layout>hbox</layout>
        <halign>right</halign>
        <text>
          <label>999.9  </label>
          <live>true</live>
          <format>%0.1f m/s </format>
          <property>sim/glider/dragger/robot/presets/glob_max_lift_height_m</property>
        </text>
        <empty>
          <stretch>true</stretch>
        </empty>
        <vrule/>
        <text>
          <label>100m</label>
        </text>
        <slider>
          <name>max_lift_height_m</name>
          <property>sim/glider/dragger/robot/presets/glob_max_lift_height_m</property>
          <min>100.0</min>
          <max>5000.0</max>
          <binding>
            <command>dialog-apply</command>
          </binding>
        </slider>
        <text>
          <label>5000m</label>
        </text>
      </group>
    </group>



    <hrule/>

<!-- bottom line -->
    <group>
      <layout>hbox</layout>
      <button>
        <legend>Apply</legend>
        <binding>
          <command>nasal</command>
          <script>dg101g.setupDragRobot()</script>
        </binding>
      </button>
      <empty>
        <pref-height>6</pref-height>
      </empty>
      <button>
        <legend>Remove</legend>
        <binding>
          <command>nasal</command>
          <script>dg101g.removeDragRobot()</script>
        </binding>
      </button>
      <empty>
        <pref-height>6</pref-height>
      </empty>
      <button>
        <legend>Close</legend>
        <binding>
          <command>dialog-close</command>
        </binding>
      </button>
    </group>



<!-- nasal code -->
    <nasal>
      <open>
      </open>
      <close>
      </close>
    </nasal>

</PropertyList>
