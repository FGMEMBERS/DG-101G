<?xml version="1.0"?>
<!-- version: 2011-07-11 -->

<PropertyList>
  <name>winch_dialog</name>
  <layout>vbox</layout>
  <default-padding>1</default-padding>
  <modal>false</modal>
  <width>500</width>

    <group>
      <layout>hbox</layout>
      <default-padding>1</default-padding>
      
      <empty>
        <stretch>true</stretch>
      </empty>
      
      
      <text>
        <label>Winch Configuration</label>
      </text>
      
      <empty>
        <stretch>true</stretch>
      </empty>
      
    </group>


    <hrule/>


<!-- winch configuration -->
    <!-- initial rope length in meters -->
    <group>
      <layout>hbox</layout>
      
      <text>
        <halign>left</halign>
        <label>Winch Tow Length</label>
      </text>
      
      <group>
        <layout>hbox</layout>
        <halign>right</halign>
        
        <text>
          <label>9999  </label>
          <live>true</live>
          <format>%0.0f m </format>
          <property>/sim/glider/winch/conf/rope_initial_length_m</property>
        </text>
        
        <empty>
          <stretch>true</stretch>
        </empty>
        
        <vrule/>
        
        <text>
          <label>100m</label>
        </text>
        
        <slider>
          <name>winchtow_length</name>
          <property>/sim/glider/winch/conf/rope_initial_length_m</property>
          <min>100.0</min>
          <max>1200.0</max>
          <binding>
            <command>dialog-apply</command>
          </binding>
        </slider>
        
        <text>
          <label>1200m</label>
        </text>
      </group>
    </group>

    <!-- max. pull force of winch -->
    <group>
      <layout>hbox</layout>
      
      <text>
        <halign>left</halign>
        <label>Winch Pull Force</label>
      </text>
      
      <group>
        <layout>hbox</layout>
        <halign>right</halign>
        
        <text>
          <label>9999  </label>
          <live>true</live>
          <format>%0.0f lbs </format>
          <property>/sim/glider/winch/conf/pull_max_lbs</property>
        </text>
        
        <empty>
          <stretch>true</stretch>
        </empty>
        
        <vrule/>
        
        <text>
          <label>300lbs</label>
        </text>
        
        <slider>
          <name>winch_force</name>
          <property>/sim/glider/winch/conf/pull_max_lbs</property>
          <min>300.0</min>
          <max>1200.0</max>
          <binding>
            <command>dialog-apply</command>
          </binding>
        </slider>
        
        <text>
          <label>1200lbs</label>
        </text>
      </group>
    </group>

    <hrule/>


    <hrule/>

    <group>
      <layout>hbox</layout>
      <button>
        <legend>Reset</legend>
        <binding>
          <command>nasal</command>
          <script>dg101g.resetWinch()</script>
        </binding>
      </button>
      <empty>
        <pref-height>6</pref-height>
      </empty>
      <button>
        <legend>Apply</legend>
        <binding>
          <command>nasal</command>
          <script>dg101g.placeWinch()</script>
        </binding>
      </button>
      <empty>
        <pref-height>6</pref-height>
      </empty>
      <button>
        <legend>Remove</legend>
        <binding>
          <command>nasal</command>
          <script>dg101g.removeWinch()</script>
        </binding>
      </button>
      <empty>
        <pref-height>6</pref-height>
      </empty>
      <button>
        <legend>Run</legend>
        <binding>
          <command>nasal</command>
          <script>dg101g.startWinch()</script>
        </binding>
        <binding>
          <command>dialog-close</command>
        </binding>
      </button>
    </group>

</PropertyList>
